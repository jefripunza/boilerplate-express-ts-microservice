{
    "name": "micro-service",
    "version": "1.0.0",
    "author": {
        "email": "jefriherditriyanto@gmail.com",
        "name": "Jefri Herdi Triyanto"
    },
    "main": "./src/index.ts",
    "license": "MIT",
    "scripts": {
        "clean": "npx cross-env rm -rf test.sqlite3 package-lock.json",
        "dev": "npx yarn clean && npx nodemon",
        "remove:node_modules": "npx cross-env rm -rf ./node_modules",
        "reset": "npx yarn remove:node_modules && npx cross-env rm -rf yarn.lock && npx yarn",
        "swagger": "npx ts-node ./src/swagger-gen",
        "migration:status": "npx knex migrate:status",
        "migration:all": "npx knex migrate:latest",
        "migration:push": "npx knex migrate:up",
        "migration:back": "npx knex migrate:down",
        "seed:run": "npx knex seed:run",
        "eslint": "npx eslint --fix --ext .js,.ts src/",
        "prettier": "npx prettier --write .",
        "test": "npx yarn clean && npx cross-env UNIT_TEST=true npx yarn migration:status && npx cross-env UNIT_TEST=true npx yarn migration:all && npx cross-env UNIT_TEST=true npx yarn seed:run && npx cross-env UNIT_TEST=true jest && npx yarn clean",
        "stash": "git stash -k && git add . && git stash pop",
        "fix:lint-staged": "npx yarn stash && git commit -m \"fix stash\" --no-verify && git push && git stash --keep-index && git clean --force",
        "build": "npx tsc",
        "start": "node dist/index.js",
        "start:ts": "npx ts-node -r tsconfig-paths/register ./src/index.ts",
        "prepare": "npx husky install"
    },
    "dependencies": {
        "amqplib": "^0.10.3",
        "axios": "^1.3.2",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-fileupload": "^1.4.0",
        "helmet": "^6.0.1",
        "joi": "^17.7.0",
        "jsonwebtoken": "^9.0.0",
        "knex": "^2.4.2",
        "moment-timezone": "^0.5.40",
        "morgan": "^1.10.0",
        "node-cron": "^3.0.2",
        "pg": "^8.9.0",
        "redis": "^4.6.4",
        "sqlite3": "^5.1.4",
        "swagger-autogen": "^2.23.0",
        "swagger-ui-express": "^4.6.0"
    },
    "devDependencies": {
        "@types/amqplib": "^0.10.1",
        "@types/babel__core": "^7.20.0",
        "@types/cookie-parser": "^1.4.3",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/express-fileupload": "^1.4.1",
        "@types/jest": "^29.4.0",
        "@types/jsonwebtoken": "^9.0.1",
        "@types/morgan": "^1.9.4",
        "@types/node-cron": "^3.0.7",
        "@types/swagger-ui-express": "^4.1.3",
        "@typescript-eslint/eslint-plugin": "^5.51.0",
        "@typescript-eslint/parser": "^5.51.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.34.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-async-await": "^0.0.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.3",
        "jest": "^29.4.2",
        "lint-staged": "^13.1.2",
        "nodemon": "^2.0.20",
        "prettier": "2.8.4",
        "ts-jest": "^29.0.5",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.1.2",
        "typescript": "^4.9.5",
        "yarn": "^1.22.19"
    },
    "lint-staged": {
        "src/**/*.{js,ts}": "eslint --fix",
        "src/**/*.{js,ts,css,scss,md}": "prettier --write --ignore-unknown"
    }
}
